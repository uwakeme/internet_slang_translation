.section {
  margin-bottom: 60rpx;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 0 40rpx 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 30rpx;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-right: 16rpx;
}

.section-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 0 40rpx;
}

.category-item {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.jargon-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #00d4ff, #0099cc);
}

.professional-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b6b, #ff4757);
}

.category-icon {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  display: block;
}

.category-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.category-desc {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.category-count {
  font-size: 20rpx;
  color: #0066cc;
  background: rgba(0, 102, 204, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.words-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 0 40rpx;
}

.word-item {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.word-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #00d4ff, #ff6b6b);
}

.word-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 35rpx rgba(0, 0, 0, 0.15);
}

.word-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #0066cc, #ff4757);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.word-meaning {
  background: linear-gradient(135deg, #0066cc, #004499);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 102, 204, 0.3);
}

.word-example {
  margin-bottom: 16rpx;
}

.example-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
  color: #0066cc;
}

.label-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.example-text {
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
  background: rgba(0, 102, 204, 0.05);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #0066cc;
}

.word-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  margin: -16rpx -20rpx -16rpx -20rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, rgba(0, 102, 204, 0.08), rgba(255, 71, 87, 0.08));
  transition: all 0.2s ease;
}

.word-footer:active {
  background: linear-gradient(135deg, rgba(0, 102, 204, 0.15), rgba(255, 71, 87, 0.15));
  transform: translateY(1rpx);
}

.translate-hint {
  font-size: 26rpx;
  color: #0066cc;
  font-weight: 600;
}

.arrow {
  font-size: 28rpx;
  color: #0066cc;
  font-weight: bold;
  transition: transform 0.2s ease;
}

.word-footer:active .arrow {
  transform: translateX(4rpx);
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}








